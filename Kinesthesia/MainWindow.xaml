        <my:NoteRectangleControl HorizontalAlignment="Left" Margin="76,292,0,0" x:Name="noteD" VerticalAlignment="Top" />
        <my:NoteRectangleControl HorizontalAlignment="Left" Margin="168,292,0,0" x:Name="noteE" VerticalAlignment="Top" />
        <my:NoteRectangleControl HorizontalAlignment="Left" Margin="254,292,0,0" x:Name="noteF" VerticalAlignment="Top" />
        <my:NoteRectangleControl HorizontalAlignment="Left" Margin="340,292,0,0" x:Name="noteG" VerticalAlignment="Top" />
        <my:NoteRectangleControl HorizontalAlignment="Left" Margin="388,178,0,0" x:Name="noteA" VerticalAlignment="Top" />
        <my:NoteRectangleControl HorizontalAlignment="Left" Margin="560,314,0,0" x:Name="noteB" VerticalAlignment="Top" />
        <Label Content="LHand" Height="38" HorizontalAlignment="Left" Margin="844,123,0,0" Name="label1" VerticalAlignment="Top" Width="52" />
        <Label Content="Label" HorizontalAlignment="Left" Margin="924,123,0,0" Name="label2" Width="52" Height="36" VerticalAlignment="Top" />
        <Label Content="Label" Height="38" HorizontalAlignment="Left" Margin="1000,121,0,0" Name="label3" VerticalAlignment="Top" Width="52" />
        <Label Content="RHand" Height="38" HorizontalAlignment="Left" Margin="844,178,0,0" Name="label4" VerticalAlignment="Top" Width="52" />
        <Label Content="Label" Height="38" HorizontalAlignment="Left" Margin="924,178,0,0" Name="label5" VerticalAlignment="Top" Width="52" />
        <Label Content="Label" Height="38" HorizontalAlignment="Left" Margin="1000,178,0,0" Name="label6" VerticalAlignment="Top" Width="52" />
        <Label Content="X" Height="38" HorizontalAlignment="Left" Margin="924,79,0,0" Name="label7" VerticalAlignment="Top" Width="52" />
        <Label Content="Y" Height="38" HorizontalAlignment="Left" Margin="1000,79,0,0" Name="label8" VerticalAlignment="Top" Width="52" />
    </Grid>
